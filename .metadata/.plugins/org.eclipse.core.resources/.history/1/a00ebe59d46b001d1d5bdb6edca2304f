<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="board">
	<select id="boardList" resultType="com.lotte.dto.BoardDTO">
		select * from board
	</select>
	<select id="boardDetail" resultType="com.lotte.dto.BoardDTO">
	select * from board where seq=#{seq}
	</select>
	
	<select id="boardInsert" resultType="com.lotte.dto.BoardDTO">
	insert into board values((select nvl(max(seq), 0)+1, #{title}, #{content}, 'admin', sysdate, #{visited});
	</select>
	
	<select id="boardDelete" resultType="com.lotte.dto.BoardDTO">
	select * from board where seq=#{seq}
	</select>
	
	<select id="boardModify" resultType="com.lotte.dto.BoardDTO">
	select * from board where seq=#{seq}
	</select>
	
</mapper>

<!-- namespace나 해당 명령의 id는 중복되면 절대 안됨 -->